@article{regnier-loilierNouvelleVieCouple2019,
  title = {Nouvelle vie de couple, nouvelle vie commune ? Processus de remise en couple après une séparation},
  shorttitle = {Nouvelle vie de couple, nouvelle vie commune ?},
  author = {Régnier-Loilier, Arnaud},
  date = {2019-07-12},
  journaltitle = {Population},
  volume = {Vol. 74},
  number = {1},
  pages = {73--102},
  publisher = {{Ined Éditions}},
  issn = {0032-4663},
  doi = {10.3917/popu.1901.0073},
  url = {https://doi.org/10.3917/popu.1901.0073},
  urldate = {2021-11-02},
  abstract = {La conjugalité a connu de nombreuses évolutions en France. On observe, d’une part, une diversification des formes d’unions (mariage, cohabitation hors mariage, pacs, relations non cohabitantes) et, d’autre part, la discontinuité des parcours amoureux, marqués par des séparations et remises en couple plus fréquentes. Partant de ce double constat, cet article étudie le lien entre l’histoire conjugale passée et la forme, cohabitation ou non, que prend l’union suivante. La plupart des études sur la remise en couple l’abordent sous le seul prisme de la vie commune. Elles occultent la conjugalité non cohabitante comme forme d’union à part entière et laissent dans l’ombre le processus de remise en couple, plus ou moins long selon les caractéristiques de l’union précédente. Les données de l’enquête Étude des parcours individuels et conjugaux (Épic, Ined-Insee, 2013-2014) retracent l’histoire conjugale des personnes interrogées en distinguant les périodes de non-cohabitation des périodes cohabitantes. En utilisant des fonctions de survie et des modèles de durée, certains freins à l’emménagement sous le même toit sont identifiés, en particulier pour les femmes, comme la présence d’enfants à charge, le fait d’avoir été marié ou d’avoir vécu une séparation conflictuelle. Un âge avancé à la remise en couple réduit par ailleurs la probabilité de vivre ensemble.},
  langid = {french},
  annotation = {Bibliographie\_available: 1 Cairndomain: www.cairn.info Cite Par\_available: 0},
  file = {/Users/eliotforcadell/Zotero/storage/S894HPW6/Régnier-Loilier - 2019 - Nouvelle vie de couple, nouvelle vie commune  Pro.pdf;/Users/eliotforcadell/Zotero/storage/JJYS7RHL/revue-population-2019-1-page-73.html}
}

